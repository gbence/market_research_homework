= form_for_q 23 do
  = ask 'A felsorolt funkciók közül melyiket használná szívesen?'
  - if flash[:error]
    %p.error= flash[:error]
  = table [ 'Internet/WAP', 'Számológép', 'Ébresztőóra', 'MMS', 'Kihangosítás', 'Bluetooth', 'Játékok', 'GPS', 'Szundi', 'Fényképezés', 'Videó rögzítés', 'SMS', 'MP3 lejátszás', 'Határidőnapló', 'Bejövő hívás elnémítása', 'Csengőhang rendelése névhez', 'Diktafon', 'Rádió', 'Mobilkód' ], [ nil, 'Funkció' ], lambda { |item| Answer.all(:questionnaire_id => @q.id, :number => 21).last.answer[item] == 'Igen' rescue false } do |item,disabled|
    = check_box_for item, disabled
  = submit
